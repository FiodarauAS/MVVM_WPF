                                <Label Content="Status:" Style="{StaticResource LabelBaseStyle}" HorizontalContentAlignment="Left" Margin="1 8 1 1"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1">
                                <ComboBox Text="19200" Style="{StaticResource ComboBoxStyle}"/>
